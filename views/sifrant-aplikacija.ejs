<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aplikacija</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/proizvodnja.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container">
    <div class="centered-box">
      <h3 class="text-center mb-4">Aplikacija</h3>

      <form action="/sifrant-aplikacija" method="POST">
        <div class="mb-3">
          <label for="nazivAplikacija" class="form-label">Naziv aplikacije</label>
          <input type="text" class="form-control" id="nazivAplikacija" name="naziv" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Spremi aplikaciju</button>
      </form>

      <h5 class="mt-5">Popis aplikacija</h5>
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Naziv</th>
          </tr>
        </thead>
        <tbody>
          <% aplikacije.forEach(function(aplikacija) { %>
            <tr>
              <td><%= aplikacija.naziv %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
