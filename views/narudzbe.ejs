<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Narudžbe</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/proizvodnja.css"> 
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container mt-5">
    <h1 class="text-center">Popis narudžbi</h1>
    
    <!-- Button to open form for adding a new order -->
    <div class="text-end mb-3">
      <a href="/narudzbe/new" class="btn btn-primary">Dodaj novu narudžbu</a>
    </div>
  
    <!-- Display table of orders -->
    <table class="table table-striped"  id="slova">
      <thead>
        <tr>
          <th>Šifra Proizvoda</th>
          <th>Datum narudžbe</th>
          <th>Ime kupca</th>
          <th>Mjesto kupca</th>
          <th>Materijal vani</th>
          <th>Boja vani</th>
          <th>Materijal unutra</th>
          <th>Boja unutra</th>
          <th>Dimenzije</th>
          <th>Količina</th>
          <th>Napomena</th>
          <th>Status</th>
          <th>Detalji</th>
        </tr>
      </thead>
      <tbody>
        <% narudzbe.forEach(function(narudzba) { %>
          <tr>
            <td><%= narudzba.sifraProizvoda %></td>
            <td><%= new Date(narudzba.datumNarudzbe).toLocaleDateString() %></td>
            <td><%= narudzba.kupac ? narudzba.kupac.naziv : 'N/A' %></td>
            <td><%= narudzba.mjestoKupca ? narudzba.mjestoKupca.naziv : 'N/A' %></td>
            <td><%= narudzba.materijalVani ? narudzba.materijalVani.naziv : 'N/A' %></td>
            <td><%= narudzba.bojaVani ? narudzba.bojaVani.naziv : 'N/A' %></td>
            <td><%= narudzba.materijalUnutra ? narudzba.materijalUnutra.naziv : 'N/A' %></td>
            <td><%= narudzba.bojaUnutra ? narudzba.bojaUnutra.naziv : 'N/A' %></td>
            <td><%= narudzba.dimenzije %></td>
            <td><%= narudzba.kolicina %></td>
            <td><%= narudzba.napomena %></td>
            <td><%= narudzba.status %></td>
            <td>
              <a href="/narudzbe/<%= narudzba._id %>" class="btn btn-info">Detalji</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

</body>
</html>  