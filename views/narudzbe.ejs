<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Narudžbe</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/proizvodnja.css"> 
  <link rel="stylesheet" href="/css/style.css"> 
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container mt-5">
    <h1 class="text-center">Popis narudžbi</h1>
    
    <!-- Button to open form for adding a new order -->
    <div class="text-end mb-3">
      <a href="/narudzbe/new" class="btn btn-primary">Dodaj novu narudžbu</a>
    </div>
  
    <!-- Display table of orders -->
      <table class="table table-striped"  id="slova" border="1">
        <thead>
          <tr>
            <th>Šifra Proizvoda</th>
            <th>Datum Narudžbe</th>
            <th>Planirani Završetak</th>
            <th>Kupac</th>
            <th>Mjesto Kupca</th>
            <th>Materijal Vani</th>
            <th>Boja Vani</th>
            <th>Materijal Unutra</th>
            <th>Boja Unutra</th>
            <th>Aplikacija</th>
            <th>Model</th>
            <th>Staklo</th>
            <th>Dimenzije</th>
            <th>Količina</th>
            <th>Napomena</th>
            <th>Status</th>
            
            <th>Akcije</th> <!-- New column for Edit and Delete buttons -->
          </tr>
        </thead>
        <tbody>
          <% narudzbe.forEach(narudzba => { %>
            <tr>
              <td><%= narudzba.sifraProizvoda %></td>
              <td><%= narudzba.datumNarudzbe.toDateString() %></td>
              <td><%= narudzba.planiratniZavrsetak.toDateString() %></td>
              <td><%= narudzba.kupac.naziv %></td>
              <td><%= narudzba.mjestoKupca.naziv %></td>
              <td><%= narudzba.materijalVani ? narudzba.materijalVani.naziv : '' %></td>
              <td><%= narudzba.bojaVani ? narudzba.bojaVani.naziv : '' %></td>
              <td><%= narudzba.materijalUnutra ? narudzba.materijalUnutra.naziv : '' %></td>
              <td><%= narudzba.bojaUnutra ? narudzba.bojaUnutra.naziv : '' %></td>
              <td><%= narudzba.aplikacija ? narudzba.aplikacija.naziv : '' %></td>
              <td><%= narudzba.model ? narudzba.model.naziv : '' %></td>
              <td><%= narudzba.staklo ? narudzba.staklo.naziv : '' %></td>
              <td><%= narudzba.dimenzije %></td>
              <td><%= narudzba.kolicina %></td>
              <td><%= narudzba.napomena %></td>
              <td><%= narudzba.status %></td>
              
              
              <!-- Actions for Edit and Delete -->
              <td>
                <a href="/narudzbe/<%= narudzba._id %>/edit">Uredi</a> |
                <form action="/narudzbe/<%= narudzba._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" onclick="return confirm('Jeste li sigurni da želite obrisati ovu narudžbu?')">Obriši</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

</body>
</html>  