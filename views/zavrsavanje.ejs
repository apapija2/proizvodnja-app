<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Završavanje - Narudžbe</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-5">
    <h1 class="text-center">Završavanje - Ažuriranje statusa</h1>

    <form action="/zavrsavanje" method="POST" class="mt-4">
      <div class="mb-3">
        <label for="productId" class="form-label">Narudžba:</label>
        <select id="productId" name="productId" class="form-control" required>
          <% narudzbas.forEach(function(narudzba) { %>
            <option value="<%= narudzba._id %>"><%= narudzba.sifraProizvoda %> - <%= narudzba.kupac.naziv %></option>
          <% }); %>
        </select>
      </div>

      <div class="mb-3">
        <label for="status" class="form-label">Status:</label>
        <select id="status" name="status" class="form-control" required>
          <option value="Nije započeto">Nije započeto</option>
          <option value="U izradi">U izradi</option>
          <option value="Gotovo">Gotovo</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="zavrseno" class="form-label">Broj završenih komada:</label>
        <input type="number" id="zavrseno" name="zavrseno" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary">Ažuriraj Završavanje status</button>
    </form>

    <h2 class="mt-5">Popis narudžbi</h2>
    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th>Šifra proizvoda</th>
          <th>Kupac</th>
          <th>Mjesto</th>
          <th>Status Završavanje</th>
          <th>Završeno</th>
        </tr>
      </thead>
      <tbody>
        <% narudzbas.forEach(function(narudzba) { %>
          <tr>
            <td><%= narudzba.sifraProizvoda %></td>
            <td><%= narudzba.kupac.naziv %></td>
            <td><%= narudzba.mjestoKupca.naziv %></td>
            <td><%= narudzba.zavrsavanje.status %></td>
            <td><%= narudzba.zavrsavanje.zavrseno %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
